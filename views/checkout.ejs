<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1" />
  <title>Checkout - Mala Hot Pot Market</title>
  <% if (paypalClientId) { %>
  <script src="https://www.paypal.com/sdk/js?client-id=<%= paypalClientId %>&currency=SGD"></script>
  <% } %>
  <style>
    :root{
      --primary:#d14343; --primary-ink:#8b1f1f; --ink:#0f172a; --muted:#6b7280;
      --card:#ffffff; --ring:#e5e7eb; --shadow:0 10px 30px rgba(15,23,42,.08);
      --space:18px; --max:1160px;
    }
    *{box-sizing:border-box}
    body{
      margin:0;
      font-family:system-ui,-apple-system,Segoe UI,Roboto,Arial,sans-serif;
      font-size:18px;
      line-height:1.6;
      color:var(--ink);
      background:linear-gradient(180deg,#fff, #fff 45%, #fdf6f6 100%);
      -webkit-font-smoothing:antialiased;
    }
    a{color:var(--primary);text-decoration:none}
    .container{max-width:var(--max);margin:0 auto;padding:24px}
    .navbar{ position:sticky; top:0; z-index:20; background:rgba(255,255,255,.9); backdrop-filter:saturate(180%) blur(8px); border-bottom:1px solid var(--ring); }
    .navwrap{ max-width:var(--max); margin:0 auto; display:flex; gap:16px; align-items:center; justify-content:space-between; padding:14px 24px }
    .brand{display:flex;align-items:center;gap:10px;font-weight:900;letter-spacing:.3px;color:var(--primary-ink); font-size:1.15rem;}
    .brand svg{width:28px;height:28px}
    .navlinks{display:flex;gap:16px;align-items:center;flex-wrap:wrap}
    .navlinks a{color:var(--ink);opacity:.9; font-size:1.05rem;}
    .badge{ padding:7px 14px; border-radius:999px; background:#ffe6e6; color:var(--primary-ink); font-weight:800; border:1px solid #ffd1d1; font-size:1rem; }
    .card{ background:var(--card); border:1px solid var(--ring); border-radius:14px; box-shadow:var(--shadow); }
    .card + .card{ margin-top:var(--space); }
    .card-body{ padding:20px; }
    .grid{ display:grid; gap:var(--space); }
    @media(min-width:900px){ .grid{ grid-template-columns:1.4fr 1fr; } }
    label{ display:block; font-weight:800; margin-bottom:6px; }
    input, textarea{ width:100%; border:1px solid var(--ring); border-radius:10px; padding:12px 14px; font-size:1rem; }
    textarea{ resize:vertical; min-height:90px; }
    .row{ display:flex; gap:12px; flex-wrap:wrap; }
    .btn{ padding:12px 18px; border-radius:12px; border:1px solid var(--ring); background:#fff; cursor:pointer; font-weight:800; font-size:1rem; }
    .btn.primary{ background:#d14343; border-color:#d14343; color:#fff; }
    .btn.ghost{ background:#fff; }
    .btn:disabled{ opacity:.6; cursor:not-allowed; }
    .summary-line{ display:flex; justify-content:space-between; margin:6px 0; }
    .note{ color:var(--muted); }
    .hint{ color:var(--muted); font-size:.95rem; }
    .pill{ padding:6px 12px; border-radius:12px; border:1px solid #f4d7b5; font-size:.92rem; background:#fff7ec; color:#8b6125; box-shadow:inset 0 1px 0 rgba(255,255,255,.8); }
  </style>
</head>
<body>
  <header class="navbar">
    <div class="navwrap">
      <div class="brand">
        <svg viewBox="0 0 24 24" fill="none"><path d="M6 12c3.5-3.5 6-2 10-6 1.6-1.6 3-1.5 3 0 0 2-2 4-3 5-5 5-7 8-11 8-2.5 0-3.5-1.5-3-3 1-3 2-3 4-4z" stroke="#d14343" stroke-width="1.5" fill="#ffdddd"/><path d="M15 6c0-2 1-3 3-3" stroke="#8b1f1f" stroke-width="1.5" stroke-linecap="round"/></svg>
        <span>Mala Hot Pot Market</span>
      </div>
      <nav class="navlinks">
        <a href="/">Home</a>
        <a href="/menu">Menu</a>
        <a href="/cart">Cart</a>
        <a href="/membership">Membership</a>
        <a href="/orders">My Orders</a>
      </nav>
      <div class="badge"><%= user ? (user.role === 'admin' ? 'Admin' : 'User') : 'Guest' %></div>
    </div>
  </header>

  <main class="container">
    <h1 style="margin:0 0 12px 0">Checkout</h1>
    <div class="grid">
      <div class="card">
        <div class="card-body">
          <div style="display:flex;justify-content:space-between;align-items:center;gap:10px;margin-bottom:12px">
            <h2 style="margin:0;font-size:1.2rem">Shipping</h2>
            <span class="pill">Delivery 1-3 days</span>
          </div>
          <form id="checkoutForm" method="POST" action="/checkout" class="stack" style="display:flex;flex-direction:column;gap:14px">
            <div class="row">
              <div style="flex:1;min-width:200px">
                <label>Name</label>
                <input name="name" value="<%= (user && user.name) || '' %>" required>
              </div>
              <div style="flex:1;min-width:160px">
                <label>Contact</label>
                <input name="contact" placeholder="+65 1234 5678">
              </div>
            </div>
            <div>
              <label>Address</label>
              <textarea name="address" placeholder="Block, Street, Unit, Postal"></textarea>
            </div>

            <div class="card" style="border:1px solid var(--ring); background:#fff">
              <div class="card-body">
                <h3 style="margin:0 0 8px 0;font-size:1.05rem">Payment Options</h3>
                <div class="note" style="margin-bottom:12px"><%= isMember ? 'Member 5% discount is applied automatically.' : 'Member 5% discount is applied automatically.' %></div>
                
                <!-- PayPal Payment -->
                <div style="margin-bottom:20px">
                  <h4 style="margin:0 0 10px 0;font-size:1rem;font-weight:800">Pay with PayPal</h4>
                  <div id="paypal-button-container" style="max-width:400px"></div>
                </div>

                <!-- NETS QR Payment -->
                <div style="margin-bottom:20px">
                  <h4 style="margin:0 0 10px 0;font-size:1rem;font-weight:800">Pay with NETS QR</h4>
                  <button type="button" id="netsButton" class="btn primary" style="width:100%;max-width:400px">Generate NETS QR Code</button>
                </div>

                <!-- PayNow Payment -->
                <div>
                  <h4 style="margin:0 0 10px 0;font-size:1rem;font-weight:800">Pay with PayNow (QR)</h4>
                  <% if (paynowQr) { %>
                    <div style="margin-top:10px;display:flex;gap:14px;align-items:center;flex-wrap:wrap">
                      <div style="text-align:center">
                        <img src="<%= paynowQr %>" alt="PayNow QR" width="150" height="150" style="border:1px solid var(--ring);border-radius:10px;background:#fff">
                        <div class="note" style="margin-top:6px">Ref: <strong><%= reference %></strong></div>
                      </div>
                      <div class="hint">Scan with your PayNow app. Amount is pre-filled and locked at S$<%= amount %>. Keep this tab open while you complete payment.</div>
                    </div>
                  <% } %>
                </div>
              </div>
            </div>

            <div style="display:flex;justify-content:flex-end;gap:10px">
              <a class="btn ghost" href="/cart">Back to Cart</a>
              <button class="btn primary" type="submit">Place Order</button>
            </div>
          </form>
        </div>
      </div>

      <div class="card">
        <div class="card-body">
          <h2 style="margin:0 0 10px 0;font-size:1.2rem">Order Summary</h2>
          <div class="note" style="margin-bottom:10px">
            <% if (cart && cart.length) { %>
              <%= cart.length %> item<%= cart.length === 1 ? '' : 's' %>
            <% } else { %>
              Your cart is empty — add items first.
            <% } %>
          </div>
          <div class="summary-line">
            <span>Subtotal</span><strong>$<%= Number(totals.subtotal || 0).toFixed(2) %></strong>
          </div>
          <div class="summary-line">
            <span>Member Cash Back (5%)</span><strong>- $<%= Number(totals.cashback || 0).toFixed(2) %></strong>
          </div>
          <div class="summary-line">
            <span>Shipping</span><span>1–3 days</span>
          </div>
          <div class="summary-line" style="font-size:1.1rem;font-weight:800;margin-top:12px">
            <span>Total</span><strong>$<%= Number(totals.total || 0).toFixed(2) %></strong>
          </div>
          <p class="note" style="margin-top:12px">
            <%= isMember ? 'Your 5% cashback is already applied.' : 'Join membership for automatic 5% cashback on every order.' %>
          </p>
        </div>
      </div>
    </div>
  </main>

  <script>
    const totalAmount = '<%= amount %>';
    const addressInput = document.querySelector('textarea[name="address"]');
    const cart = <%= JSON.stringify((cart || []).map(item => item.productId)) %>;
    const paypalClientId = '<%= paypalClientId || "" %>';

    // PayPal Button Integration
    function renderPaypalButtons() {
      if (!window.paypal) {
        console.error('PayPal SDK not loaded');
        document.getElementById('paypal-button-container').innerHTML = '<div class="note" style="color:red">PayPal SDK failed to load. Please check your internet connection.</div>';
        return;
      }
      paypal.Buttons({
        createOrder: function (data, actions) {
          return fetch('/api/paypal/create-order', {
            method: 'POST',
            headers: {
              'Content-Type': 'application/json'
            },
            body: JSON.stringify({ amount: totalAmount })
          })
            .then(res => res.json())
            .then(data => {
              console.log('Create order response:', data);
              if (data.success && data.orderId) {
                return data.orderId;
              } else if (data.orderId) {
                return data.orderId;
              } else {
                console.error('Unexpected response format:', data);
                throw new Error('Failed to create order: ' + (data.message || data.error || 'Unknown error'));
              }
            })
            .catch(err => {
              console.error('Create order fetch error:', err);
              throw err;
            });
        },
        onApprove: function (data, actions) {
          return fetch('/api/paypal/pay', {
            method: 'POST',
            headers: {
              'Content-Type': 'application/json'
            },
            body: JSON.stringify({ 
              orderId: data.orderID,
              cartItemIds: cart,
              address: addressInput.value.trim()
            })
          })
            .then(res => res.json())
            .then(details => {
              if (details.success) {
                // Build success page URL with payment details
                const params = new URLSearchParams({
                  amount: details.transaction?.amount || totalAmount,
                  paymentMethod: 'PayPal',
                  reference: details.transaction?.orderId || data.orderID,
                  orderId: details.orderId || ''
                });
                window.location.href = "/checkout_success?" + params.toString();
              } else {
                alert('Payment not completed: ' + (details.error || 'Unknown error'));
              }
            })
            .catch(err => {
              console.error('Payment error:', err);
              alert('Payment processing failed. Please try again.');
            });
        },
        onClick: function (data, actions) {
          if (!cart.length) {
            alert('Your cart is empty. Please add items to cart before paying.');
            return actions.reject();
          }

          const address = addressInput.value.trim();
          if (!address) {
            alert('Please enter a shipping address.');
            addressInput.focus();
            return actions.reject();
          }

          return actions.resolve();
        },
        onError: function (err) {
          console.error('PayPal error details:', err);
          console.error('Error message:', err.message);
          console.error('Error stack:', err.stack);
          alert('An error occurred with PayPal: ' + (err.message || JSON.stringify(err)));
        }
      }).render('#paypal-button-container');
    }

    if (!paypalClientId) {
      console.warn('PayPal client ID not configured');
      document.getElementById('paypal-button-container').innerHTML = '<div class="note" style="color:orange">PayPal is not configured. Please add PAYPAL_CLIENT_ID to .env file.</div>';
    } else if (cart && cart.length > 0) {
      renderPaypalButtons();
    } else {
      document.getElementById('paypal-button-container').innerHTML = '<div class="note">Cart is empty</div>';
    }

    // NETS QR Button Handler
    document.getElementById('netsButton').addEventListener('click', function() {
      const address = addressInput.value.trim();
      if (!address) {
        alert('Please enter a shipping address before proceeding with payment.');
        addressInput.focus();
        return;
      }

      // Create a form to submit NETS QR generation
      const form = document.createElement('form');
      form.method = 'POST';
      form.action = '/generateNETSQR';

      const amountField = document.createElement('input');
      amountField.type = 'hidden';
      amountField.name = 'cartTotal';
      amountField.value = totalAmount;
      form.appendChild(amountField);

      const addressField = document.createElement('input');
      addressField.type = 'hidden';
      addressField.name = 'address';
      addressField.value = address;
      form.appendChild(addressField);

      document.body.appendChild(form);
      form.submit();
    });
  </script>
</body>
</html>
